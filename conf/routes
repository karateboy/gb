# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET      /                              controllers.Assets.at(path="/public", file="index.html")
GET      /Customer                      controllers.Assets.at(path="/public", file="customer.html")

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file                  controllers.Assets.versioned(path="/public", file: Asset)
GET      /html/*file                    controllers.Assets.at(path="/public/html", file)
GET      /dist/*file                    controllers.Assets.at(path="/public/dist", file)

GET      /logout                        controllers.Login.logout
POST     /authenticate                  controllers.Login.authenticate
GET      /testAuthenticated             controllers.Login.testAuthenticated

POST     /User                          controllers.Application.newUser
GET      /User                          controllers.Application.getAllUsers
PUT      /User/:id                      controllers.Application.updateUser(id)
DELETE   /User/:id                      controllers.Application.deleteUser(id)

GET      /Group                         controllers.Application.getGroupInfoList

POST     /QueryCareHouse                controllers.Query.queryCareHouseList()
POST     /QueryCareHouse/:skip/:limit   controllers.Query.queryCareHouse(skip:Int, limit:Int, outputTypeStr="html")
POST     /QueryCareHouse/count          controllers.Query.queryCareHouseCount()
POST     /QueryCareHouse/excel          controllers.Query.queryCareHouseExcel()
PUT      /CareHouse                     controllers.Query.updateCareHouse

POST     /QueryBuildCase                controllers.Query.queryBuildCaseList()
POST     /QueryBuildCase/:skip/:limit   controllers.Query.queryBuildCase(skip:Int, limit:Int, outputTypeStr="html")
POST     /QueryBuildCase/count          controllers.Query.queryBuildCaseCount()
PUT      /BuildCase                     controllers.Query.updateBuildCase
GET		 /BuildCase/:json				controllers.Query.getBuildCase(json)

POST     /NewOrder                      controllers.OrderManager.newOrder
POST     /UpdateOrder                   controllers.OrderManager.upsertOrder
GET      /UnhandledOrder                controllers.OrderManager.unhandledOrder

DELETE   /Order/:orderId                controllers.OrderManager.deleteOrder(orderId:Long)
POST     /CloseOrder/:orderId           controllers.OrderManager.closeOrder(orderId:Long)

GET      /TestGoogle                    controllers.Application.testGeoCoding
#Report

